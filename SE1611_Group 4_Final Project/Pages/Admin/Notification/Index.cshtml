@page
@model SE1611_Group_4_Final_Project.Pages.NotificationIndexModel
@{
}<script>
     function handler(page) {
         var a = document.getElementById("pageIdx");
         a.value = page;
         document.getElementById("formGet").submit();
     }
</script>
<style>
    .search-bar {
        padding: 3%;
    }
</style>
<div class="container-fluid py-4">
    <div class="row">

        <div class="col-12">
            <div class="card mb-4">
                <div class="row search-bar">
                    <form id="formGet" method="get">
                        <div class="row table-reponsive">
                            <div class="col-12">
                                <label>Search Notification</label>
                                <input class="form-control" asp-for="@Model.query" type="search" onchange="document.getElementById('formGet').submit()" />
                            </div>
                        </div>
                        <input id="pageIdx" asp-for="@Model.PageIndex" hidden />
                    </form>
                </div>
                <div class="card-header pb-0">
                    <h6>Notification table <a asp-page="Form"><i class="fa fa-plus add-icon" onclick="addNotif"></i></a></h6>
                </div>
                <div class="card-body px-0 pt-0 pb-2">
                    <div class="table-responsive p-0">
                        <table class="table align-items-center mb-0">
                            <thead>
                                <tr>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Title</th>
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Description</th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Show for Room</th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Created Date</th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Hidden Date</th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Using</th>

                                    <th class="text-secondary opacity-7"></th>
                                    <th class="text-secondary opacity-7"></th>
                                    <th class="text-secondary opacity-7"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Notifications != null)
                                {
                                    @foreach (var notif in Model.Notifications)
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex px-2 py-1">
                                                    <div class="d-flex flex-column justify-content-center text-wrap">
                                                        <h6 class="mb-0 text-sm">@notif.Title</h6>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <p class="text-xs font-weight-bold mb-0 text-wrap">@notif.Description</p>
                                            </td>
                                            <td class="align-middle text-center">
                                                @foreach (var room in notif.Rooms)
                                                {
                                                    <span class="text-xs font-weight-bold mb-0">@room.Name - </span>
                                                }

                                            </td>
                                            <td class="align-middle text-center text-sm">
                                                <span class="badge badge-sm bg-gradient-success">@notif.CreatedDate.Value.ToString("HH:mm dd/MM/yyyy")</span>
                                            </td>
                                            <td class="align-middle text-center">
                                                <span class="text-secondary text-xs font-weight-bold">@notif.HideDate.Value.ToString("dd/MM/yyyy")</span>
                                            </td>
                                            <td class="align-middle text-center">
                                                <input type="checkbox" checked="@notif.IsUse" disabled />
                                            </td>
                                            <td class="align-middle">
                                                <a asp-page="Form" asp-route-id="@notif.Id" class="text-secondary font-weight-bold text-xs" data-toggle="tooltip" data-original-title="Edit user">
                                                    Edit
                                                </a>
                                            </td>
                                            <td class="align-middle">
                                                <a asp-page-handler="Delete" asp-route-id="@notif.Id" class="text-secondary font-weight-bold text-xs" data-toggle="tooltip" data-original-title="Edit user">
                                                    Delete
                                                </a>
                                            </td>

                                        </tr>
                                    }

                                }

                            </tbody>
                        </table>
                    </div>
                </div>

            </div>
        </div>
        <div class="card">
            @{
                var page = Request.Query["PageIndex"].ToString();
                if (string.IsNullOrEmpty(page)) page = "0";
                int pageNum = int.Parse(page);
            }
            @if (Model.HasPreviousPage || Model.HasNextPage)
            {
                <nav aria-label="Page navigation example" class="mt-4">
                    <ul class="pagination justify-content-center">
                        @if (Model.HasPreviousPage)
                        {
                            <li class="page-item">
                                <a class="page-link" onclick="handler(1)" aria-label="First">
                                    <i class="fa fa-angle-left"></i>
                                    <span class="sr-only">First</span>
                                </a>
                            </li>
                        }
                        @if (pageNum > 5)
                        {
                            <li class="page-item"><a onclick="handler(@(pageNum - 5))" asp-a class="page-link">...</a></li>
                        }

                        @for (int i = Math.Max(1, pageNum - 2); i <= Math.Min(Model.TotalPage, pageNum + 2); i++)
                        {
                            if (i == pageNum)
                            {
                                <li class="page-item active"><a class="page-link">@i</a></li>
                            }
                            else
                            {
                                <li class="page-item"><a class="page-link" onclick="handler(@i)">@i</a></li>
                            }
                        }
                        @if (pageNum < Model.TotalPage - 4)
                        {
                            <li class="page-item"><a onclick="handler(@(pageNum + 5))" class="page-link">...</a></li>
                        }
                        @if (Model.HasNextPage)
                        {
                            <li class="page-item">
                                <a class="page-link" onclick="handler(@Model.TotalPage)" aria-label="Last">
                                    <i class="fa fa-angle-right"></i>
                                    <span class="sr-only">Last</span>
                                </a>
                            </li>
                        }
                    </ul>
                </nav>
            }
        </div>
    </div>
</div>