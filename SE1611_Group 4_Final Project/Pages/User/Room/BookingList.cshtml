@page
@model SE1611_Group_4_Final_Project.Pages.User.Room.BookingListModel
@{
}

<div class="card card-frame">
    <div class="card-body">
        <div class="card">
            <div class="table-responsive">
                <table class="table align-items-center mb-0">
                    <thead>
                        <tr>
                            <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Room</th>
                            <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Adress</th>
                            <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Area</th>
                            <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Price</th>
                            <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Rooms)
                        {
                            <tr>
                                <td class="align-middle text-center">
                                    <span class="text-secondary text-xs font-weight-bold">@item.Name</span>
                                </td>
                                <td class="align-middle text-center">
                                    <span class="text-secondary text-xs font-weight-bold text-wrap">@item.Address</span>
                                </td>
                                <td class="align-middle text-center">
                                    <span class="text-secondary text-xs font-weight-bold">@item.Area</span>
                                </td>
                                <td class="align-middle text-center">
                                    <span class="text-secondary text-xs font-weight-bold">@item.Price</span>
                                </td>
                                <td class="align-middle">
                                    <a class="text-secondary font-weight-bold text-xs" asp-page="/User/Room/RoomDetail" asp-route-id="@item.Id" data-toggle="tooltip" data-original-title="remove request">
                                        Detail
                                    </a>
                                    <label>|</label>
                                    <a class="text-secondary font-weight-bold text-xs" asp-page-handler="Remove" asp-route-id="@item.Id" data-toggle="tooltip" data-original-title="remove request">
                                        Remove
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>